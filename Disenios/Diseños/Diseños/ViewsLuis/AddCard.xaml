<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diseños.ViewsLuis.AddCard">
    <ContentPage.Content>


        <StackLayout >

            <StackLayout>
                <Image 
                 Source="{StaticResource Tarjeta}" 
                 >
                    
                </Image>
            </StackLayout>

   
            <StackLayout>
                
                <Label 
                    Text="Datos de la tarjeta:"
                    Style="{StaticResource LabelStyles}"/>

                <Frame Style="{StaticResource FrameStyles}">

                    <StackLayout WidthRequest="15">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="{StaticResource tarjetaIcon}" HorizontalOptions="Start" ></Image>
                            <Entry
                            Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource EntryStyles}"
                            Placeholder="5512 0000 0000 0000"
                            Keyboard="Numeric"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"  
                            TextColor="Black"
                            />      
                        </Grid>
                    </StackLayout>
                </Frame>
            </StackLayout>


            <StackLayout >

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>



                    <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource FrameStyles}">
                        <StackLayout WidthRequest="25">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="{StaticResource recargarIcon}" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" ></Image>
                                <DatePicker  Style="{StaticResource DatePickerStyles}" HorizontalOptions="FillAndExpand"   Grid.Row="0" Grid.Column="1" Format="MMMMM"/>

                            </Grid>
                        </StackLayout>
                    </Frame>


                    <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource FrameStyles}">
                        <StackLayout WidthRequest="25"> 
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="{StaticResource recargarIcon}" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" ></Image>
                                <DatePicker  Style="{StaticResource DatePickerStyles}" HorizontalOptions="FillAndExpand"   Grid.Row="0" Grid.Column="1"  Format="YYYY"/>

                            </Grid>
                        </StackLayout>
                    </Frame>



                </Grid> 



                <StackLayout>
                <Button 
                 Text="Continuar"
                Style="{StaticResource ButtonStyles}"
                >
                </Button>
               </StackLayout>
                
            </StackLayout>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>