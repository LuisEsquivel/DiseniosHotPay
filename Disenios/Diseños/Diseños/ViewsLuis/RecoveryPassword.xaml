<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diseños.ViewsLuis.RecoveryPassword">
    <ContentPage.Content>

        <StackLayout   VerticalOptions="Center" >
            
            <StackLayout >
                <Label Text="Recuperar Contraseña."
                Style="{StaticResource LabelStylesTitles}"
                 />
            </StackLayout>



            <StackLayout >
                <Label 
                    Text="Correo electrónico asociado"
                    Style="{StaticResource LabelStyles}"/>

                <Entry  
                Placeholder="Correo" 
                Keyboard="Email"
                Style="{StaticResource EntryStyles}"/>
            </StackLayout>

        

            <StackLayout>
                <Button 
                 Text="Continuar"
                Style="{StaticResource ButtonStyles}"
                >
                </Button>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>