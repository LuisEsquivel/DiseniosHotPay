<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diseños.ViewsLuis.WhatsYourName">
    <ContentPage.Content>

        <StackLayout   VerticalOptions="Center" >
            <StackLayout >
                <Label Text="¿Cuál es tu nombre?"
                Style="{StaticResource LabelStylesTitles}"
                 />
            </StackLayout>



            <StackLayout >
                <Label 
                    Text="Nombre"
                    Style="{StaticResource LabelStyles}"/>

                <Entry  
                Placeholder="Nombre" 
                Style="{StaticResource EntryStyles}"/>
            </StackLayout>

            <StackLayout >
                <Label Text="Apellidos" 
                       Style="{StaticResource LabelStyles}"/>

                <Entry  
                Placeholder="Apellidos"
                Style="{StaticResource EntryStyles}"/>
            </StackLayout>



            <StackLayout>
                <Button 
                 Text="Continuar"
                Style="{StaticResource ButtonStyles}"
                >
                </Button>
            </StackLayout>


        </StackLayout>

    </ContentPage.Content>
</ContentPage>